<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
	>
	
    <!-- 日期时间的显示  -->
    <TextView
        android:id="@+id/tv_conversation_detail_date" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:34pm"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_conversation_detail_date"
        />
    
    <!-- 接收的消息信息 -->
    <TextView 
        android:id="@+id/tv_conversation_detail_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_receive_sms"
		android:text="你好"
		android:textSize="16dp"
		android:textColor="#ffffff"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="7dp"
        android:layout_marginLeft="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="20dp"
		android:layout_gravity="left"
        />
    
    <!-- 发送的消息信息 -->
    <TextView 
        android:id="@+id/tv_conversation_detail_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_send_sms"
		android:text="请问你是？"
		android:textSize="16dp"
		android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="7dp"
        android:layout_marginRight="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="20dp"
		android:layout_gravity="right"
        />

</LinearLayout>